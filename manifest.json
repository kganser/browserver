{
  "manifest_version": 2,
  "name": "Simpl.js",
  "short_name": "Simpl.js",
  "description": "Simpl.js lets you write and run javascript apps from your browser",
  "offline_enabled": true,
  "icons": {"128": "icon.png"},
  "version": "0.4",
  "minimum_chrome_version": "33",
  "permissions": [
    "unlimitedStorage",
    "system.network",
    "http://*/",
    "https://*/",
    "ftp://*/"
  ],
  "app": {
    "background": {
      "scripts": [
        "simpl.js",
        "modules/string.js",
        "modules/socket.js",
        "modules/http.js",
        "modules/html.js",
        "modules/xhr.js",
        "modules/database.js",
        "modules/net.js",
        "modules/crypto.js",
        "background.js"
      ]
    }
  },
  "sockets": {
    "tcpServer": {"listen": "*"},
    "tcp": {"connect": "*"}
  },
  "url_handlers": {
    "launch": {
      "matches": ["http://simpljs.com/launch-*"],
      "title": "Launch Simpl.js Console"
    }
  }
}