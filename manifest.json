{
  "manifest_version": 2,
  "name": "Simpl.js",
  "description": "Simpl isomorphic platform for javascript",
  "offline_enabled": true,
  "version": "2",
  "minimum_chrome_version": "33",
  "permissions": ["unlimitedStorage", "http://*/", "https://*/", "ftp://*/"],
  "app": {
    "background": {
      "scripts": [
        "loader.js",
        "modules/string.js",
        "modules/socket.js",
        "modules/http.js",
        "modules/html.js",
        "modules/xhr.js",
        "modules/database.js",
        "modules/async.js",
        "simpl.js"
      ]
    }
  },
  "sockets": {
    "tcpServer": {"listen": "*"}
  }
}