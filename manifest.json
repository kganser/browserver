{
  "manifest_version": 2,
  "name": "Simpl.js",
  "description": "Simpl isomorphic platform for javascript",
  "offline_enabled": true,
  "version": "2",
  "minimum_chrome_version": "33",
  "permissions": ["unlimitedStorage", "http://*/", "https://*/", "ftp://*/"],
  "app": {
    "background": {
      "page": "simpl.html"
    }
  },
  "sockets": {
    "tcpServer": {"listen": "*"}
  }
}